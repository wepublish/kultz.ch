{
  "include": ["./**/*"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "outDir": "../dist/",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017"],

    "declaration": true,
    "declarationMap": true,

    "types": ["@types/node", "@types/webpack-dev-server"],
    "jsx": "react",
    "incremental": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,

    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule":  true
  }
}
